<!DOCTYPE html>
<html>
<link href='https://fonts.googleapis.com/css?family=Bitter' rel='stylesheet' type='text/css'>
<head>
  <title id="title">Eatsy</title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Bitter' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render partial: "shared/nav_bar" %>


  <% if current_page?(root_url) %>
  <div id="myCarousel" class="carousel slide">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Carousel items -->
    <div class="carousel-inner">
      <div class="active item"><%= image_tag ("_DSC7894.jpg") %></div>
      <div class="item"><%= image_tag ("_DSC7597.jpg") %></div>
      <div class="item"><%= image_tag ("_DSC9292.jpg") %></div>
      <!--<div class="item"><img src="http://www.garfieldestates.com/wp-content/uploads/2014/01/blog-pizza.jpg" alt="" /></div>-->
    </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
  </div>
  <% end %>
<div class="main-body container">
  <% flash.each do |name, message| %>
  <div class="<%= bootstrap_class_for(name) %>">
    <%= message%>
  </div>
  <% end %>

  <%= yield %>

  <%= render partial: "shared/footer" %>
</div>
</body>
</html>
